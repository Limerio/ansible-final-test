<VirtualHost *:80>
    ServerAdmin {{ wordpress_admin_email }}
    DocumentRoot {{ wordpress_install_dir }}
    <Directory {{ wordpress_install_dir }}>
        Options FollowSymLinks
        AllowOverride All
        Require all granted
    </Directory>
    ErrorLog {{ wordpress_log_dir }}/wordpress_error.log
    CustomLog {{ wordpress_log_dir }}/wordpress_access.log combined
</VirtualHost>
